<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".classesDescription">

    <TextView
        android:id="@+id/descriptionClasses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Classes"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yogaClass"
        android:layout_width="313dp"
        android:layout_height="420dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border2"
        android:paddingStart="15dp"
        android:paddingTop="30dp"
        android:text="Yoga class"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionClasses" />

    <TextView
        android:id="@+id/yogaContent"
        android:layout_width="308dp"
        android:layout_height="346dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="1dp"
        android:paddingStart="15dp"
        android:paddingTop="30dp"
        android:text="Yoga is an ancient and complex practice, rooted in Indian philosophy. It began as a spiritual practice but has become popular as a way of promoting physical and mental well-being,Help people quit smoking."
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/yogaClass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/yogaClass"
        app:layout_constraintTop_toTopOf="@+id/yogaClass" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView2"
        android:layout_width="133dp"
        android:layout_height="94dp"

        android:layout_marginStart="203dp"
        android:layout_marginEnd="14dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:src="@drawable/yoga"
        app:layout_constraintEnd_toEndOf="@+id/yogaClass"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/yogaClass"
        app:layout_constraintTop_toTopOf="@+id/yogaClass" />


</androidx.constraintlayout.widget.ConstraintLayout>